theme = Dracula
mouse-hide-while-typing = true

keybind = ctrl+n=new_window

keybind = shift+left=goto_split:left
keybind = shift+down=goto_split:bottom
keybind = shift+up=goto_split:top
keybind = shift+right=goto_split:right

keybind = ctrl+a>left=new_split:left
keybind = ctrl+a>down=new_split:down
keybind = ctrl+a>up=new_split:up
keybind = ctrl+a>right=new_split:right
keybind = ctrl+a>f=toggle_split_zoom

keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab
keybind = ctrl+a>c=new_tab

keybind = ctrl+shift+left=resize_split:left,10
keybind = ctrl+shift+down=resize_split:down,10
keybind = ctrl+shift+up=resize_split:up,10
keybind = ctrl+shift+right=resize_split:right,10

window-save-state = always 
